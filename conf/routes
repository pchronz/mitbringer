# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Messages
GET     /messages                   controllers.Message.queryMessages
PUT     /messages                   controllers.Message.sendMessage(content: String, offerId: String, destinationUser: String, originUser: String)

# Offers
GET     /offers                     controllers.Offer.queryOffers
PUT     /offers                     controllers.Offer.createOffer(origin: String, destination: String, date: String, price: String)

# Authentication
POST    /logins                     controllers.Authentication.authenticate(username: String, password: String)
PUT     /logins                     controllers.Authentication.register(username: String, password: String, email: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
